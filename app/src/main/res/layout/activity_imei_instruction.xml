<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ImeiInstructionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imge_log"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginBottom="0dp"
            android:src="@drawable/extracover_logo" />

        <TextView
            android:id="@+id/apps_Version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imge_log"
            android:layout_marginBottom="5dp"
            android:gravity="center_horizontal"
            android:text="@string/app_version_1_00"
            android:textAppearance="@style/Primarybold_Text16"
            android:textColor="#2f4fa7" />

        <TextView
            android:id="@+id/back_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_logo"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="5dp"
            android:drawableLeft="@drawable/ic_left_arrow_small"
            android:drawablePadding="10dp"
            android:text="Instruction for IMEI"
            android:textAppearance="@style/Primarybold_Text24"
            android:textColor="#2f4fa7" />

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20sp"
            android:orientation="horizontal"
            android:paddingLeft="40dp">

            <View
                android:layout_width="110dp"
                android:layout_height="5dp"
                android:background="#ff0000" />

            <View
                android:layout_width="75dp"
                android:layout_height="5dp"
                android:background="#2234AC" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:text="@string/instruction_text"
                android:textAlignment="textStart"
                android:textAppearance="@style/Primary_Text16"
                android:textColor="#001A5E" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_Continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:background="@drawable/round_barder_background"
            android:drawableRight="@drawable/ic_chevron_right_small"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:text="Continue"
            android:textAllCaps="false"
            android:textAppearance="@style/Primarybold_Text20"
            android:textColor="@android:color/white" />

    </LinearLayout>
</RelativeLayout>